
{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "major", "patch", "digest"], 
        "automerge": false
      }
    ],
    "dependencyDashboard": true,
    "prHourlyLimit": 15,
    "prConcurrentLimit": 50,
    "gitLabIgnoreApprovals": true
  }